<%= render "shared/flash" %>

<h1>Addresses</h1>

<table>
  <thead>
    <tr>
      <th>Zip</th>
      <th>Street1</th>
      <th>Street2</th>
      <th>City</th>
      <th>Country</th>
      <th>State</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.zip %></td>
        <td><%= address.street1 %></td>
        <td><%= address.street2 %></td>
        <td><%= address.city %></td>
        <td><%= address.country %></td>
        <td><%= address.state %></td>
        <td><%= address.phone %></td>
        <td><%= link_to 'Show', address %></td>
        <td><%= link_to 'Edit', edit_address_path(address) %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Address', new_address_path %>
