<section class="area-main">

  <div class="text-sm mt-6 mb-6 text-gray-800 text-center w-full">
    <h1 class="text-3xl sm:text-4xl">Servo</h1>
  </div>

  <div class="panel m-4 sm:py-10 sm:px-8">
    <%= form_for(:session, url: login_path) do |form| %>

      <%= render "shared/flash" %>

      <div class="field">
        <%= form.label :email %>
        <%= form.text_field :email, class: "form-input", required: true, autofocus: true %>
      </div>

      <div class="field">
        <%= form.label :password %>
        <%= form.password_field :password, class: "form-input", required: true %>
      </div>

      <%= form.submit "Log in", class: "btn btn-lg text-center" %>
    <% end %>
  </div>

  <div class="text-sm mt-4 text-gray-800 text-center w-full">
    Help: <%= link_to "Reset your password", new_password_reset_path %>
    <div>
      Login issue: <%= link_to "Raise a ticket", "https://thalesinflyt.zendesk.com/hc/en-us/requests/new", class:"flex-auto w-1/3 sm:w-auto mb-10", target: "_blank"%>
    </div>
  </div>
</section>
