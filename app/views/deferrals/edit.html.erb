<% content_for :breadcrumb do %>
  <%= link_to "Stations", station_activity_plans_path(Current.user.home_station), class: "breadcrumb__leaf" %>
  <%= link_to "Workload", activity_path(@activity), class: "breadcrumb__leaf" %>
  <%= link_to "Fault", activity_fault_path(@activity, @deferral.fault), class: "breadcrumb__leaf" %>
  <%= link_to "Deferral", activity_deferral_path(@activity, fault_id: @deferral.fault.id), class: "breadcrumb__leaf" %>
  <%= link_to "Edit Deferral", edit_activity_deferral_path(@activity, @deferral), class: "breadcrumb__leaf" %>
<% end %>

<section class="activity-grid--left hide-on-mobile panel">
  <%= render "activities/items", activity: @activity %>
</section>

<section class="activity-grid--right panel">
  <%= render "shared/flash" %>

  <div class="flex mb-6">
    <div>
      <%= render "shared/back_link", link_text: "Back", link_route: activity_deferral_path(@activity, @deferral, fault_id: @deferral.fault_id), truncate: false %>
    </div>
  </div>

  <%= render 'form', deferral: @deferral, activity: @activity, fault: @deferral.fault %>

</section>
