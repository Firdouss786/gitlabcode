<label for="<%= product_category.id %>" class="table-body">
  <div class="table-body__cell hidden"><input type="checkbox" id="<%= product_category.id %>" class="form-checkbox" data-target="table.rowCheckbox"></div>
  <div class="table-body__cell"><%= product_category.name %></div>
  <div class="table-body__cell"><%= product_category.description %></div>
  <div class="table-body__cell"><%= product_category.product_type %></div>
  <div class="table-body__cell">
    <%= link_to((inline_svg :icon_edit_pencil, class: "h-5 w-5 float-right text-thales-light-blue active:text-white"), edit_product_category_path(product_category), title: 'Edit') %>
  </div>

</label>
