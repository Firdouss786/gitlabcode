<%= render "shared/flash" %>

<h1>Repair Orders</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Origin stock location</th>
      <th>Destination stock location</th>
      <th>Part transaction</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @repair_orders.each do |repair_order| %>
      <tr>
        <td><%= repair_order.user_id %></td>
        <td><%= repair_order.origin_stock_location_id %></td>
        <td><%= repair_order.destination_stock_location_id %></td>
        <td><%= repair_order.part_transaction_id %></td>
        <td><%= link_to 'Show', repair_order %></td>
        <td><%= link_to 'Edit', edit_repair_order_path(repair_order) %></td>
        <td><%= link_to 'Destroy', repair_order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Repair Order', new_repair_order_path %>
