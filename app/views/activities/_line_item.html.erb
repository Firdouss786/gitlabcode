<div class="h-12 flex items-center border-b py-2 no-underline hover:bg-gray-100 text-gray-500">

  <div class="flex-grow flex items-center flex-wrap xl:flex-no-wrap">
    <div data-test-id="task" class="flex-grow w-full xl:w-auto text-gray-700"><%= description %></div>
    <div class="text-sm xl:text-right flex items-center">
      <span class="xl:border border-gray-400 rounded xl:px-2 xl:py-1 mr-1 whitespace-no-wrap"><%= pill %></span>
      <span class="xl:hidden">&bull;</span>
      <div data-test-id="item-reference" class="w-32 line-item__reference inline-block ml-1 whitespace-no-wrap"><%= reference %></div>
    </div>
  </div>

  <div>
    <%= inline_svg :icon_chevron_right, class: "h-6 w-6 text-gray-400" %>
  </div>

</div>
