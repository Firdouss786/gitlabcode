<%= render "shared/flash" %>

<h1>Task Actions Users</h1>

<table>
  <thead>
    <tr>
      <th>Task action</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @task_actions_users.each do |task_actions_user| %>
      <tr>
        <td><%= task_actions_user.task_action %></td>
        <td><%= task_actions_user.user %></td>
        <td><%= link_to 'Show', task_actions_user %></td>
        <td><%= link_to 'Edit', edit_task_actions_user_path(task_actions_user) %></td>
        <td><%= link_to 'Destroy', task_actions_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task Actions User', new_task_actions_user_path %>
