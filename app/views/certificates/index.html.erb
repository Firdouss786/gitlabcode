<%= render "shared/flash" %>

<h1>Certificates</h1>

<table>
  <thead>
    <tr>
      <th>Expired</th>
      <th>Filename</th>
      <th>Reference</th>
      <th>Governance</th>
      <th>Stock item</th>
      <th>Hdfs filename</th>
      <th>Expired at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @certificates.each do |certificate| %>
      <tr>
        <td><%= certificate.expired %></td>
        <td><%= certificate.filename %></td>
        <td><%= certificate.reference %></td>
        <td><%= certificate.governance %></td>
        <td><%= certificate.stock_item %></td>
        <td><%= certificate.hdfs_filename %></td>
        <td><%= certificate.expired_at %></td>
        <td><%= link_to 'Show', certificate %></td>
        <td><%= link_to 'Edit', edit_certificate_path(certificate) %></td>
        <td><%= link_to 'Destroy', certificate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Certificate', new_certificate_path %>
