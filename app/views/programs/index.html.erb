<%= render "shared/flash" %>

<h1>Programs</h1>

<table>
  <thead>
    <tr>
      <th>Airline</th>
      <th>Mcc email</th>
      <th>Repair order note</th>
      <th>Airport</th>
      <th>Mailing group 1</th>
      <th>Mailing group 2</th>
      <th>Mailing group 3</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @programs.each do |program| %>
      <tr>
        <td><%= program.airline %></td>
        <td><%= program.mcc_email %></td>
        <td><%= program.repair_order_note %></td>
        <td><%= program.airport %></td>
        <td><%= program.mailing_group_1 %></td>
        <td><%= program.mailing_group_2 %></td>
        <td><%= program.mailing_group_3 %></td>
        <td><%= link_to 'Show', program %></td>
        <td><%= link_to 'Edit', edit_program_path(program) %></td>
        <td><%= link_to 'Destroy', program, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Program', new_airline_program_path %>
