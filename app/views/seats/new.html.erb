<% content_for :page_title do %>
  <%= render 'layouts/page_title', icon: :icon_cloud, label: "Upload LOPA" %>
<% end %>

<% content_for :breadcrumb do %>
  <%= link_to 'Airlines', airlines_path, class: "breadcrumb__leaf" %>
  <%= link_to @fleet.airline.name.titleize, airline_flights_path(@fleet.airline), class: "breadcrumb__leaf" %>
  <%= link_to 'Fleet', airline_fleets_path(@fleet.airline), class: "breadcrumb__leaf" %>
  <%= link_to "LOPA", seats_path(@fleet), class: "breadcrumb__leaf" %>
  <%= link_to "Upload", new_seat_path(@fleet), class: "breadcrumb__leaf" %>
<% end %>

<% content_for :nav do %>
  <% render 'shared/airline_nav', airline: @fleet.airline %>
<% end %>

<section class="panel area-main area-main--half">
  <h2 class="header--underlined"><%= @fleet.name %></h2>

  <%= render 'form', seat: @fleet.seats %>

</section>
