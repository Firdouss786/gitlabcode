<%= form_with(model: @seat, local: true, multipart: true) do |form| %>

  <div class="field form-grid--span">
    <%= label_tag :file, 'LOPA FILE' %>
    <%= file_field_tag :file, class: "form-input block w-full" %>
  </div>

  <div class="form-grid--span">
    <br>
  </div>

  <div class="flex justify-end content-center form-grid--right">
    <%= link_to "Cancel", seats_path(@fleet), { class: "btn btn-secondary mr-4" } %>
    <%= form.submit 'Upload', class: "btn" %>
  </div>

<% end %>
