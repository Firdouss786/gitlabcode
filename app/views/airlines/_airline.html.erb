<label for="<%= airline.id %>" class="table-body">
  <div class="table-body__cell hidden"><input type="checkbox" id="<%= airline.id %>" class="form-checkbox" data-target="table.rowCheckbox"></div>
  <div class="table-body__cell"><%= airline.name %></div>
  <div class="table-body__cell"><%= airline.icao_code %></div>
  <div class="table-body__cell"><%= airline.iata_code %></div>
  <div class="table-body__cell"><%= airline.callsign %></div>
  <div class="table-body__cell"><%= airline.customer ? "YES" : "NO" %></div>
  <div class="table-body__cell"><%= airline.country %></div>
  <div class="table-body__cell"><%= airline.description %></div>
  <div class="table-body__cell flex justify-end">
    <% if airline.customer %>
      <%= link_to((inline_svg :icon_aircraft, class: "h-5 w-5 mr-4 text-thales-light-blue active:text-white"), airline_fleets_path(airline), title: 'Fleet config') %>
    <% end %>
    <%= link_to((inline_svg :icon_edit_pencil, class: "h-5 w-5 text-thales-light-blue active:text-white"), edit_airline_path(airline), title: 'Edit airline') %>
  </div>
</label>
