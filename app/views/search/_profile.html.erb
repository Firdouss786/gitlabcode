<% cache document do %>
  <%= link_to profile_path(document) do %>
    <div class="search-result">
      <div class="search-result__icon">
        <%= image_tag "icons/person_icon.png" %>
      </div>
      <div class="search-result__content">
        <span class="search-result__heading"><%= document.name %></span>
        <span class="search-result__data"><%= document.description %></span>
      </div>
    </div>
  <% end %>
<% end %>
