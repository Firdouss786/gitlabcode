<% cache document do %>
  <%= link_to airport_path(document) do %>
    <div class="search-result">
      <div class="search-result__icon">
        <%= image_tag "icons/address_icon.png" %>
      </div>
      <div class="search-result__content">
        <span class="search-result__heading"><%= document.name %></span>
        <span class="search-result__data"><%= document.iata_code %> <%= document.icao_code %> <%= document.country %></span>
      </div>
    </div>
  <% end %>
<% end %>
