<div class="flight-container">

  <div class="flex items-center h-24 text-center px-2">
    <%= link_to flight.aircraft.reg_and_nose, flights_path(flight.aircraft) %>
  </div>

  <div class="flex items-center text-white font-bold bg-thales-light-blue rounded-full w-24 h-24">
    <div class="flex flex-grow flex-col text-center">
      <span class=""><%= flight.origin_airport_code %></span>
      <span class="text-sm"><time data-utc="<%= utc flight.filed_departure_time %>" data-target="time.output" /></span>
    </div>
  </div>

  <div class="flex items-center h-24 text-center px-2">
    <%= flight.flight_number %>
  </div>

  <div class="flex items-center text-white font-bold bg-thales-light-blue rounded-full w-24 h-24">
    <div class="flex flex-grow flex-col text-center">
      <span class=""><%= flight.destination_airport_code %></span>
      <span class="text-sm"><time data-utc="<%= utc flight.estimated_arrival_time %>" data-target="time.output" /></span>
    </div>
  </div>

  <% if flight.next_flight %>
    <div class="flex items-center h-24 text-center px-2">
      <%= time_diff_to_time flight.ground_time %>
    </div>

    <div class="flex items-center text-white font-bold bg-thales-light-blue rounded-full w-24 h-24">
      <div class="flex flex-grow flex-col text-center">
        <span class=""><%= flight.next_flight.origin_airport_code %></span>
        <span class="text-sm"><time data-utc="<%= utc flight.next_flight.filed_departure_time %>" data-target="time.output" /></span>
      </div>
    </div>

    <div class="flex items-center h-24 text-center px-2">
      <%= flight.next_flight.flight_number %>
    </div>

    <div class="flex items-center text-white font-bold bg-thales-light-blue rounded-full w-24 h-24">
      <div class="flex flex-grow flex-col text-center">
        <span class=""><%= flight.next_flight.destination_airport_code %></span>
        <span class="text-sm"><time data-utc="<%= utc flight.next_flight.estimated_arrival_time %>" data-target="time.output" /></span>
      </div>
    </div>
  <% end %>

</div>
